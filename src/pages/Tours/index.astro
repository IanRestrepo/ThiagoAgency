---
import Layout from "../../layouts/Layout.astro";
import LargeCard from "../../components/LargeCard/LargeCard.astro";
import { ghostClient } from "../../lib/ghost";

const posts = await ghostClient.posts
    .browse({
        limit: "all",
    })
    .catch((err) => {
        console.error(err);
    });
---

<Layout title="Thiago | Nuestros Servicios">
    <section class="text-gray-900 font-sans p-6">
        <h1 class="font-bold text-2xl text-center">Tours ✈️</h1>

    <div class=' flex flex-wrap'>
        {
            posts.length > 0
                ? posts.map((post) => (
                      <LargeCard
                          tag={"Thiago Agency"}
                          image={post.feature_image}
                          destiny={post.title}
                          description={post.excerpt}
                      />
                  ))
                : "Ups, No hay ningun tour por el momento."
        }
    </div>
        
    </section>
</Layout>
