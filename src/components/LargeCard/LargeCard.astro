---
interface Props {
    tag: string;
    image: string;
    destiny: string;
    description: string;
}

const { tag, image, destiny, description } = Astro.props;
---

<div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/4 p-4">
    <a
        href="https://wa.link/vzyx91"
        class="c-card block bg-slate-100 shadow-md hover:shadow-xl rounded-lg overflow-hidden"
    >
        <div class="relative pb-48 overflow-hidden">
            <img
                class="absolute inset-0 h-full w-full object-cover"
                src={image}
                alt={destiny}
            />
        </div>
        <div class="p-4">
            <span
                class="inline-block px-2 py-1 leading-none bg-orange-200 text-orange-800 rounded-full font-semibold uppercase tracking-wide text-xs"
                >{tag}</span
            >
            <h2 class="mt-2 mb-2 font-bold">{destiny}</h2>
            <p class="text-sm">{description}</p>
        </div>
    </a>
</div>
