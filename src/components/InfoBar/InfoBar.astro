    <a href={facebookUrl} class="flex px-5 font-bold">
        <img src={FacebookLogo.src} alt="Facebook Logo" width={w} height={h} class="px-2"> 
        {facebookUser}
    </a>
    <a href={twitterUrl} class="flex px-5 font-bold">
        <img src={TwitterLogo.src} alt="Twitter Logo" width={w} height={h} class="px-2">
        {twitterUser}
