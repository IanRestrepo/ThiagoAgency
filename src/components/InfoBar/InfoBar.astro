---
    import FacebookLogo from '../Assets/FacebookLogo.svg'
    import TwitterLogo from  '../Assets/TwitterLogo.svg'

    interface Props {
        facebookUser: string,
        facebookUrl: string,
        twitterUser: string,
        twitterUrl: string,
        phoneNumber: string,
        email: string,
        w?: string,
        h?: string
    }

    const { facebookUrl, facebookUser, twitterUser , twitterUrl, phoneNumber, email, w, h } = Astro.props;

---

